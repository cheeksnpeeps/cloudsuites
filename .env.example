# CloudSuites Environment Variables
# Docker-Only Development Configuration  
# Copy this file to .env and update with your actual values
# =================================================================

# Spring Profile Selection
# Options: dev (development), test (testing), prod (production)
SPRING_PROFILES_ACTIVE=dev

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/cloudsuites
SPRING_DATASOURCE_USERNAME=csuser
SPRING_DATASOURCE_PASSWORD=csPassw0rd
DB_HOST=postgres
DB_PORT=5432
DB_NAME=cloudsuites
DB_USERNAME=csuser
DB_PASSWORD=csPassw0rd

# Auth0 Configuration
AUTH0_AUDIENCE=https://api.your-domain.com
AUTH0_ISSUER_URI=https://your-auth0-domain.auth0.com/

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://cloudsuites-app:8080

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_SERVICE_SID=your_twilio_service_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# JWT Configuration
JWT_SECRET_KEY=your_base64_encoded_jwt_secret_key_here
JWT_ACCESS_TOKEN_VALIDITY_MS=86400000   # 1 day
JWT_REFRESH_TOKEN_VALIDITY_MS=604800000 # 7 days

# Server Configuration
SERVER_PORT=8080

# Storage Configuration
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10MB

# Google Cloud Platform
GCP_FIREBASE_SERVICE_ACCOUNT=classpath:firebase-service-account.json
