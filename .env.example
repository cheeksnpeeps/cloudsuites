# CloudSuites Environment Variables
# Docker-Only Development Configuration  
# Copy this file to .env and update with your actual values
# =================================================================

# Spring Profile Selection
# Options: dev (development), test (testing), prod (production)
SPRING_PROFILES_ACTIVE=dev

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/cloudsuites
SPRING_DATASOURCE_USERNAME=csuser
SPRING_DATASOURCE_PASSWORD=csPassw0rd
DB_HOST=postgres
DB_PORT=5432
DB_NAME=cloudsuites
DB_USERNAME=csuser
DB_PASSWORD=csPassw0rd

# Auth0 Configuration
AUTH0_AUDIENCE=https://api.your-domain.com
AUTH0_ISSUER_URI=https://your-auth0-domain.auth0.com/

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://cloudsuites-app:8080

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_SERVICE_SID=your_twilio_service_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# JWT Configuration (Enhanced RSA-256)
JWT_ISSUER=cloudsuites
JWT_AUDIENCE=CloudSuites
JWT_ACCESS_TOKEN_VALIDITY_MINUTES=15    # 15 minutes for security
JWT_REFRESH_TOKEN_VALIDITY_DAYS=30      # 30 days for convenience

# Backward compatibility (deprecated - RSA keys are generated automatically)
JWT_SECRET_KEY=deprecated_use_rsa_keys
JWT_ACCESS_TOKEN_VALIDITY_MS=900000     # 15 minutes (900000 ms)
JWT_REFRESH_TOKEN_VALIDITY_MS=2592000000 # 30 days (2592000000 ms)

# Server Configuration
SERVER_PORT=8080

# Storage Configuration
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10MB

# Google Cloud Platform
GCP_FIREBASE_SERVICE_ACCOUNT=classpath:firebase-service-account.json
